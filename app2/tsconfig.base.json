{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "strict": false,
    "checkJs": false,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@alilc/lowcode-designer":["libs/designer/src"],
      "@alilc/lowcode-editor-core":["libs/editor-core/src"],
      "@alilc/lowcode-editor-skeleton":["libs/editor-skeleton/src"],
      "@alilc/lowcode-engine":["libs/engine/src"],
      "@alilc/lowcode-ignitor":["libs/ignitor/src"],
      "@alilc/lowcode-plugin-designer":["libs/plugin-designer/src"],
      "@alilc/lowcode-plugin-outline-pane":["libs/plugin-outline-pane/src"],
      "@alilc/lowcode-rax-renderer":["libs/rax-renderer/src"],
      "@alilc/lowcode-rax-simulator-renderer":["libs/rax-simulator-renderer/src"],
      "@alilc/lowcode-renderer-core":["libs/renderer-core/src"],
      "@alilc/lowcode-shell":["libs/shell/src"],
      "@alilc/lowcode-types":["libs/types/src"],
      "@alilc/lowcode-utils":["libs/utils/src"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
